<Window x:Class="PaperInsight.UI.UserIDDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaperInsight.UI"
        mc:Ignorable="d"
        Title="Enter Experiement ID" Height="190" Width="300" WindowStartupLocation="CenterScreen">
        <StackPanel Margin="10,0,10,0">
            <TextBlock Text="Enter your Experiment ID:" Margin="10" FontSize="18"/>
        <TextBox x:Name="txtUserId" Margin="10" FontSize="18"/>
        <Button x:Name="btnOK" Content="OK" Height="35" Click="BtnOK_Click" Foreground="White" FontWeight="DemiBold" Background="#FF2F75D4" Margin="10"/>
        </StackPanel>
</Window>
