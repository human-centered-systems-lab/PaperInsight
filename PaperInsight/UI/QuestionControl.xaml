<UserControl x:Class="PaperInsight.UI.QuestionControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaperInsight.UI"
        mc:Ignorable="d"
        d:DesignHeight="170" d:DesignWidth="900"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <Grid Background="White" Width="900">
        <StackPanel Orientation="Vertical">
            <TextBlock HorizontalAlignment="Left" Margin="0,5,0,5" FontSize="14" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding Question, TargetNullValue='Question'}" Foreground="Black"/>
            <StackPanel Orientation="Horizontal" Height="30">
                <CheckBox x:Name ="CheckBox0" HorizontalAlignment="Center" VerticalContentAlignment="Center" Checked="CheckBox_Checked"/>
                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="Black" Text="{Binding Answer1, TargetNullValue='TBD'}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30">
                <CheckBox x:Name ="CheckBox1" HorizontalAlignment="Center" VerticalContentAlignment="Center" Checked="CheckBox_Checked"/>
                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="Black" Text="{Binding Answer2, TargetNullValue='TBD'}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30">
                <CheckBox x:Name ="CheckBox2" HorizontalAlignment="Center" VerticalContentAlignment="Center" Checked="CheckBox_Checked"/>
                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="Black" Text="{Binding Answer3, TargetNullValue='TBD'}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30">
                <CheckBox x:Name ="CheckBox3" HorizontalAlignment="Center" VerticalContentAlignment="Center" Checked="CheckBox_Checked"/>
                <TextBlock TextAlignment="Center" VerticalAlignment="Center" Height="20" Foreground="Black" Text="{Binding Answer4, TargetNullValue='TBD'}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
